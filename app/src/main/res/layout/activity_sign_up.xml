<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SignUp">

    <ImageView
        android:id="@+id/Logo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:src="@drawable/vector_ek1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <LinearLayout
        android:id="@+id/mailLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="130dp"
        android:background="@drawable/logintext"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/Logo">

        <EditText
            android:id="@+id/mailText"
            android:layout_width="330dp"
            android:layout_height="42dp"
            android:layout_margin="5dp"
            android:hint="Phone number or email">
        </EditText>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/nameLayout"
        android:layout_width="340dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:background="@drawable/logintext"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/mailLayout">

        <EditText
            android:id="@+id/nameText"
            android:layout_width="290dp"
            android:layout_height="42dp"
            android:layout_margin="5dp"
            android:hint="Name surname">
        </EditText>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/usernameLayout"
        android:layout_width="340dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:background="@drawable/logintext"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/nameLayout">

        <EditText
            android:id="@+id/usernameText"
            android:layout_width="290dp"
            android:layout_height="42dp"
            android:layout_margin="5dp"
            android:hint="Username">
        </EditText>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/passLayout"
        android:layout_width="340dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:background="@drawable/logintext"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/usernameLayout">

        <EditText
            android:id="@+id/passwordText"
            android:layout_width="290dp"
            android:layout_height="42dp"
            android:layout_margin="5dp"
            android:hint="Password"
            android:inputType="textPassword">
        </EditText>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/signupLayout"
        android:layout_width="300dp"
        android:layout_height="35dp"
        android:layout_marginTop="30dp"
        android:alpha="0.36000001430511"
        android:background="@drawable/loginlayout"
        android:clickable="true"
        android:focusable="true"
        android:gravity="center"
        android:onClick="signUp"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/passLayout">

        <TextView
            android:id="@+id/signUpText"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="Sign Up"
            android:textColor="@color/log_in_color"
            android:textSize="18sp">
        </TextView>
    </LinearLayout>

    <TextView
        android:id="@+id/loginAlreadyText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="160dp"
        android:text="Already have an account? Log in"
        android:textSize="15sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/passLayout" />

</androidx.constraintlayout.widget.ConstraintLayout>